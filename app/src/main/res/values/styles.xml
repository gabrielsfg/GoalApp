<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/BlueGreen</item>
        <item name="colorPrimaryDark">@color/Cerulean</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHint">@color/CadetGray</item>

        <!-- Defina a cor da linha inferior do TextInputLayout -->
        <item name="colorControlNormal">@color/CadetGray</item>

        <!-- Defina o espaÃ§amento entre o hint e a borda do TextInputLayout -->
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="CustomNoActionBarTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/Cerulean</item>
    </style>

    <style name="CustomToolbarStyle">
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:colorControlNormal">#FFFFFF</item>
    </style>

</resources>